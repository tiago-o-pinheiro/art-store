model Category {
  id          String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String     @unique
  slug        String     @unique(map: "category_slug_idx")
  description String?
  image       String?    
  createdAt   DateTime   @default(now()) @db.Timestamp(6)
  updatedAt   DateTime   @updatedAt
  products    Product[]
}